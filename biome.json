{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off"
            },
            "complexity": {
                "useLiteralKeys": "off",
                "noForEach": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        },
        "ignore": [
            "./cypres/**/*.*"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "ignore": []
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    },
    "css": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    }
}
